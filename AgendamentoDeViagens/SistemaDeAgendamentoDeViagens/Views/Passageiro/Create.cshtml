@model SistemaDeAgendamentoDeViagens.Models.Passageiro
@{
    ViewData["Title"] = "Create";
}
<div class="main_index" style="margin-top:5%;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center" id="form-card">
                <div class="card-header" id="form-capa">
                    <h4> Novo Passageiro</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Nome</label>
                            <input asp-for="Nome_pas" class="form-control" />
                            <span asp-validation-for="Nome_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Data de nascimento</label>
                            <input asp-for="Data_nasc_pas" class="form-control" />
                            <span asp-validation-for="Data_nasc_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Sexo</label>
                            <select asp-for="Sexo_pas" class="form-control single-select" required>
                                <option value="">[Selecione]</option>
                                <option value="M">Masculino</option>
                                <option value="F">Feminino</option>
                            </select>
                            <span asp-validation-for="Sexo_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">CPF</label>
                            <input asp-for="CPF_pas" class="form-control" />
                            <span asp-validation-for="CPF_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Passaporte</label>
                            <input asp-for="Passaporte_pas" class="form-control" />
                            <span asp-validation-for="Passaporte_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">CEP</label>
                            <input asp-for="CEP_pas" name="CEP_pas" value="" class="form-control" />
                            <span asp-validation-for="CEP_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Estado</label>
                            <input asp-for="UF_pas" name="UF_pas" value="" class="form-control" />
                            <span asp-validation-for="UF_pas" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label" id="form-texto">Cidade</label>
                            <input asp-for="Cidade_pas" name="Cidade_pas" value="" class="form-control" />
                            <span asp-validation-for="Cidade_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Bairro</label>
                            <input asp-for="Bairro_pas" name="Bairro_pas" value="" class="form-control" />
                            <span asp-validation-for="Bairro_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" id="form-texto">Email</label>
                            <input asp-for="Email_pas" class="form-control" />
                            <span asp-validation-for="Email_pas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-primary btn-block" id="form-btn" />
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-primary btn-block" role="button" id="form-btn">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
