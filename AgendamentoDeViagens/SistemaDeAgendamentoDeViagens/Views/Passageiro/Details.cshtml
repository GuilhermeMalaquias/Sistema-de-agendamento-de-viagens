@model SistemaDeAgendamentoDeViagens.Models.Passageiro

@{
    ViewData["Title"] = "Details";
}

<div class="container" style="margin-top:5%;">
    <div class="row align-items-end" id="pass-back-img">
        <div class="col-3 align-self-start">
            <img src="~/css/img/user-icon-new.png" alt="Alternate Text" />
        </div>
        <div class="col-9 align-self-end" id="nome-pas">
            <h1>  @Html.DisplayFor(model => model.Nome_pas) </h1>
        </div>

    </div>

</div>

<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> Data de Nascimento</div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Data_nasc_pas)</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header">Sexo</div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Sexo_pas)</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> cpf</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">@Html.DisplayFor(model => model.CPF_pas)</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> passaporte</div>
                <div class="card-body text-primary" id="card-pass">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Passaporte_pas)</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> uf</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">@Html.DisplayFor(model => model.UF_pas)</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> cidade</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Cidade_pas)</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> bairro</div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Bairro_pas)</h5>
                </div>
                
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> cep</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">@Html.DisplayFor(model => model.CEP_pas)</h5>
                </div>
                
            </div>
        </div>
        <div class="col-4">
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <div class="card-header"> email</div>
                <div class="card-body text-primary" id="card-email">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Email_pas)</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.PassageiroId" class="btn btn-outline-primary btn-block" id="form-btn">Editar</a>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-primary btn-block" role="button" id="form-btn">Cancelar</a>
</div>