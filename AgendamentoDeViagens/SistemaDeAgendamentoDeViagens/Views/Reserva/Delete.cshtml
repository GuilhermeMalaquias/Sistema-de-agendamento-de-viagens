@model SistemaDeAgendamentoDeViagens.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1 style="margin-top:5%;"></h1>


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card text-center" id="form-card">
            <div class="card-header" id="form-capa">
                <h4> Deletar Agendamento</h4>
            </div>
            <div class="card-body">
                <h4 id="del-text">Data</h4>
                <h3>
                    @Html.DisplayFor(model => model.Data_res)
                </h3>
                <h4 id="del-text">Preço</h4>
                <h3>
                    @Html.DisplayFor(model => model.Preco_res)
                </h3>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ReservaId" />
                    <input type="submit" value="Deletar" class="btn btn-outline-primary btn-block" id="delete-btn" />
                    <a class="btn btn-outline-primary btn-block" id="form-btn" asp-action="Index">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>




