@model SistemaDeAgendamentoDeViagens.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1 style="margin-top:5%;"></h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card border-primary mb-3">
                <div class="card-header" id="form-capa">Data da Reserva</div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Data_res)</h5>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card border-primary mb-3">
                <div class="card-header" id="form-capa">Valor</div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Preco_res)</h5>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card border-primary mb-3">
                <div class="card-header" id="form-capa">Passaporte</div>
                <div class="card-body text-primary">
                    <h5 class="card-title" style="text-transform:uppercase;">@Html.DisplayFor(model => model.Passageiro.Passaporte_pas)</h5>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.ReservaId " class="btn btn-outline-primary btn-block" id="form-btn">Editar</a>
            </div>
        </div>
        <div class="col-6">
            <div class="card border-primary mb-3">
                <div class="card-header" id="form-capa">Destino </div>
                <div class="card-body text-primary">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Voo.Destino_voo)</h5>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-primary btn-block" role="button" id="form-btn">Cancelar</a>
            </div>
        </div>
       
       
    </div>
</div>

