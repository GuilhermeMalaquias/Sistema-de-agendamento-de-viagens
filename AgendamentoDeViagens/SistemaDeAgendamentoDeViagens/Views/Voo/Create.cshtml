@model SistemaDeAgendamentoDeViagens.Models.Voo

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center" >
    <div class="col-md-6 " id="form-row">
        <div class="card text-center" id="form-card">
            <div class="card-header" id="form-capa">
                <h4> Novo Voo</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" id="form-texto">Origem</label>
                        <input asp-for="Origem_voo" class="form-control" />
                        <span asp-validation-for="Origem_voo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" id="form-texto">Partida</label>
                        <input asp-for="Destino_voo" class="form-control" />
                        <span asp-validation-for="Destino_voo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" id="form-texto">Descrição</label>
                        <input asp-for="Descricao_voo" class="form-control" />
                        <span asp-validation-for="Descricao_voo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" id="form-texto">Data da decolagem</label>
                        <input asp-for="Data_partida_voo" class="form-control" />
                        <span asp-validation-for="Data_partida_voo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" id="form-texto">Data do pouso</label>
                        <input asp-for="Data_chegada_voo" class="form-control" />
                        <span asp-validation-for="Data_chegada_voo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-primary btn-block" id="form-btn" />
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-primary btn-block" role="button" id="form-btn">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
